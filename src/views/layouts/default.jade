include ../_base
- var bodyClass = 'page-header-fixed page-footer-fixed'
- var sidebarClass = ''
- var pageHeaderClass = 'navbar-fixed-top';
- rootPath = rootPath || '';
- var assetPath = rootPath + 'assets/';
- var themeStyle = 'default';
- var highlightJsStyle = 'tomorrow';
- var includeHighlightJs = false;
block vars
doctype html
<!--[if IE 8]><html class="ie8" lang="en"><![endif]-->
<!--[if IE 9]><html lang="en" class="ie9"><![endif]-->
<!--[if !IE]><!-->
html(lang="en")
    <!--<![endif]-->
    head
        block head
            title
                block title
                    |  !{typeof config !== 'undefined' ? config.title : 'Default'}
            block meta
                meta(charset="UTF-8")
                meta(name="viewport", content="width=device-width, initial-scale=1")
                meta(http-equiv="X-UA-Compatible", content="IE=edge")
            block styles
                +stylesheet('stylesheet')
                +stylesheet('themes/theme-' +themeStyle)(id='theme-style')
                if includeHighlightJs
                    +stylesheet('highlightjs/styles/' + highlightJsStyle, true)(id='hljs-style')

    body.page-loading(class=bodyClass)
        #page-loader
            .loader.loader-page

        .page-header.navbar(class=pageHeaderClass)
            block page-header
                .page-header-inner
                    block header-logo
                        .page-logo
                            .logo-packadic.pull-left
                                block header-logo-inner
                                    | Packadic
                            block header-sidebar-toggler
                                .menu-toggler.sidebar-toggler(data-toggle='tooltip', title='Toggle the sidebar menu', data-layout-api='sidebar-toggle', data-placement='right')

                    block header-responsive-toggler
                        a(href='javascript:;', data-toggle='collapse', data-target='.navbar-collapse').menu-toggler.responsive-toggler

                    .pull-right
                        block header-right
                            .nav-link.quick-sidebar-toggler(data-layout-api='qs-toggle', data-toggle='tooltip', title='Toggle the quick sidebar menu', data-placement='left', data-offset='0 10px')

        .clearfix


        block page-container
            .page-container
                .page-sidebar-wrapper
                    .page-sidebar.navbar-collapse.collapse
                        block page-sidebar
                            ul.page-sidebar-menu(class=sidebarClass)
                                block page-sidebar-menu
                                    include ../partials/sidebar-items


                .page-content-wrapper
                    block page-content-wrapper
                        .page-content
                            .page-head
                                .page-title
                                    h1
                                        block page-title
                            ul.page-breadcrumb.breadcrumb
                                block breadcrumb
                            .page-content-seperator
                            block page-content
                                .page-content-inner
                                    block content
        block page-footer
            .page-footer
                .page-footer-inner
                    block page-footer-inner
                        - var year = (new Date()).getFullYear()
                        | Copyright Packadic
                block scroll-to-top
                    .scroll-to-top
                        i.fa.fa-level-up


        block scripts
            +javascript('reflect-metadata/Reflect', true)
            +javascript('es6-module-loader/dist/es6-module-loader', true)
            +javascript('system.js/dist/system.src', true)
            +javascript('vue.dev') //+javascript('vue/dist/vue', true)
            +javascript('vendor')
            +javascript('templates.min.js')
            +javascript('packadic')
            //+javascript('pnotify')

            +javascript('components/layout')
            +javascript('components/quick_sidebar')
            +javascript('components/presets')
            //+javascript('components/code-block')

        block scripts-highlightjs
            if includeHighlightJs
                +javascript('highlightjs/highlight.pack.min', true)

        block init-script
            script.
                var app = packadic.Application.instance;
                app.DEBUG = true;
                app
                    .init({
                        hello: 'test'
                    })
                    .boot()
                    .then(function (app) {
                        //$('#testPluginContainer').testPlugin({});
                        //$('#testWidgetContainer').testWidget({});
                    });


        block script

        block quick-sidebar
            include ../partials/quick-sidebar
