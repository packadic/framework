include ../_base
- var bodyClass = 'page-header-fixed page-footer-fixed'
- var sidebarClass = ''
- var pageHeaderClass = 'navbar-fixed-top';
- rootPath = rootPath || '';
- var assetPath = rootPath + 'assets/';
- var themeStyle = 'default';
block vars
doctype html
<!--[if IE 8]><html class="ie8" lang="en"><![endif]-->
<!--[if IE 9]><html lang="en" class="ie9"><![endif]-->
<!--[if !IE]><!-->
html(lang="en")
    <!--<![endif]-->
    head
        block head
            title
                block title
                    |  !{typeof config !== 'undefined' ? config.title : 'Default'}
            block meta

                meta(charset="UTF-8")
                meta(name="viewport", content="width=device-width, initial-scale=1")
                meta(http-equiv="X-UA-Compatible", content="IE=edge")
            block styles
                link(href=assetPath + "styles/stylesheet.css", type="text/css", rel="stylesheet")
                link(href=assetPath + "styles/themes/theme-"+themeStyle+".css", type="text/css", rel="stylesheet", id='theme-style')
                link(href=assetPath + "bower_components/highlightjs/styles/tomorrow.css", type="text/css", rel="stylesheet", id='hljs-style')

    body.page-loading(class=bodyClass)
        #page-loader
            .loader.loader-page

        // #header
        .page-header.navbar(class=pageHeaderClass)
            block page-header
                // .header-inner (#header > .header-inner)
                .page-header-inner
                    .page-logo
                        .logo-packadic.pull-left Packadic
                        .menu-toggler.sidebar-toggler(data-toggle='tooltip', title='Toggle the sidebar menu', data-layout-api='sidebar-toggle', data-placement='right')

                    a(href='javascript:;', data-toggle='collapse', data-target='.navbar-collapse').menu-toggler.responsive-toggler

                    //include ../partials/header-menu

                    //nav.navbar.navbar-header
                        ul.nav.navbar-nav
                        //a.nav-link.nav-link-icon(href="#"): i.fa.fa-cog
                    .pull-right
                        .nav-link.quick-sidebar-toggler(data-layout-api='qs-toggle', data-toggle='tooltip', title='Toggle the quick sidebar menu', data-placement='left', data-offset='0 10px')




        .clearfix


        block page-container
            // #page
            .page-container
                // .page-sidebar
                .page-sidebar-wrapper
                    // .sidebar
                    .page-sidebar.navbar-collapse.collapse
                        block page-sidebar
                            // .sidebar-menu
                            ul.page-sidebar-menu(class=sidebarClass, data-keep-expanded="false", data-auto-scroll="true", data-slide-speed="200")
                                include ../partials/sidebar-items


                // .page-content
                .page-content-wrapper
                    block page-content-wrapper
                        // #content
                        .page-content
                            // .content-head (#content > .content-head)
                            .page-head
                                // .content-title (#content > .content-head > .content-title)
                                .page-title
                                    h1
                                        block page-title
                            // #content-breadcrumb
                            ul.page-breadcrumb.breadcrumb
                                block breadcrumb
                            .page-content-seperator
                            block page-content
                                // .content-inner (#content -> .content-inner)
                                .page-content-inner
                                    block content
        block page-footer
            .page-footer
                .page-footer-inner
                    - var year = (new Date()).getFullYear()
                    | Copyright Packadic
                .scroll-to-top
                    i.fa.fa-level-up

        block preferences
            #customizer-plugin


        block scripts
            script(src=assetPath + 'scripts/vendor.js')
            script(src=assetPath + 'scripts/packadic.js')
            script(src=assetPath + 'scripts/components/layout.js')
            script(src=assetPath + 'scripts/components/quick_sidebar.js')
            script(src=assetPath + 'scripts/components/presets.js')
            script(src=assetPath + 'scripts/plugins/testPlugin.js')
            script(src=assetPath + 'scripts/plugins/testWidget.js')

        block init-script
            script.
                // last
                var app = packadic.Application.instance;
                app.DEBUG = true;
                app.init({
                    hello: 'test'
                });
                app.boot().then(function (app) {
                    $('#testPluginContainer').testPlugin({});
                    $('#testWidgetContainer').testWidget({});
                });

        block script

        block quick-sidebar
            include ../partials/quick-sidebar
            script.
                var app = packadic.Application.instance;
                app.booted(function(){
                    /** @var {LayoutComponent} layout */
                    var layout = app.layout;
                    //layout.setTheme()
                });
