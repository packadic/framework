include ../_base
- var bodyClass = 'page-header-fixed page-sidebar-closed-hide-logo'
- var sidebarClass = ''
- var pageHeaderClass = 'navbar-fixed-top';
block vars
doctype html
<!--[if IE 8]><html class="ie8" lang="en"><![endif]-->
<!--[if IE 9]><html lang="en" class="ie9"><![endif]-->
<!--[if !IE]><!-->
html(lang="en")
    <!--<![endif]-->
    head
        block head
            title
                block title
                    | Codex Theme Demo
            block meta

                meta(charset="UTF-8")
                meta(http-equiv="X-UA-Compatible", content="IE=edge")
            block styles
                link(href="assets/styles/stylesheet.css", type="text/css", rel="stylesheet", data-styler="stylesheet")
                link(href="assets/styles/themes/theme-default.css", type="text/css", rel="stylesheet", data-styler="theme-default")
    body.page-loading(class=bodyClass)
        #page-loader
            .loader.loader-page

        // #header
        .page-header.navbar(class=pageHeaderClass)
            block page-header
                // .header-inner
                .page-header-inner
                    include ../partials/page-header
        .clearfix



        block page-container
            // #page
            .page-container
                // .page-sidebar
                .page-sidebar-wrapper
                    // .sidebar
                    .page-sidebar.nav-collapse
                        block page-sidebar
                            // .sidebar-menu
                            ul.page-sidebar-menu(class=sidebarClass, data-keep-expanded="false", data-auto-scroll="true", data-slide-speed="200")
                                include ../partials/sidebar-items
                // .page-content
                .page-content-wrapper
                    block page-content-wrapper
                        // #content
                        .page-content
                            // .content-head
                            .page-head
                                // .content-title
                                .page-title
                                    h1
                                        block page-title
                            // #content-breadcrumb
                            ul.page-breadcrumb.breadcrumb
                                block breadcrumb
                            block page-content
                                // .content-inner
                                .page-content-inner
                                    block content
        block page-footer
            include ../partials/page-footer

        block preferences
            #customizer-plugin

        script(src="assets/scripts/vendor.min.js")
        script(src="assets/scripts/config.js")
        block init-script
            script(src="assets/scripts/init.js")

        block scripts
