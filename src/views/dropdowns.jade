extends layouts/default

mixin demo-dropdown-button(text, color, size)
    - color = color || 'btn-primary';
    - size = size || 'xs';
    .btn-group
        button.btn.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false', class=color + ' btn-' + size)
            | #{text}&nbsp;
            span.caret
        .dropdown-menu
            block

mixin demo-dropdown-advanced-items
    h6.header Options
    a.dropdown-item
        i.fa.fa-user
        | First
        span.badge 13
    a.dropdown-item
        i.fa.fa-cog
        | Later
        span.badge 2
    .dropdown-submenu
        a(href="#")
            i
            | Submenu 1
        ul.dropdown-menu
            li.header
                h3 Submenu 1
            +lia First
            +lia Later
            li.submenu
                a(href="#") Submenu 1.1
                ul.dropdown-menu
                    +lia First
                    +lia Later
                    li.footer
                        a(href='#') View
                        a(href='#') Cancel
            +lia Last
    li.header
        h3 Extras
    +lia
        i.fa.fa-user
        | Mister
        span.label.label-danger err
    +lia
        i.fa.fa-list
        | Alea
        span.label.label-success valid
    li.submenu
        a(href="#")
            i.fa.fa-puzzle-piece
            | Submenu 2
        ul.dropdown-menu
            li.header
                h3 Submenu 2
            +lia First
            +lia Later
            li.submenu
                a(href="#") Submenu 2.2
                ul.dropdown-menu
                    +lia First
                    +lia Later
            +lia Last
    +lia
        i.fa.fa-bolt
        | Events
        span.badge 3
    li.footer
        a(href='#') View all

block page-title
    | Dropdowns


block breadcrumb
    +breadcrumb('index.html') Home
    +breadcrumb('dropdowns.html', true) Color variants


block content
    .row
        .col-md-12
            +demo-dropdown-button('Advanced dropdown inverse wide').dropdown-menu-inverse.dropdown-menu-wide
                +demo-dropdown-advanced-items
